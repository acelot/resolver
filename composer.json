{
  "name": "acelot/resolver",
  "description": "Dependency auto resolver for PHP 7 and 8",
  "keywords": [
    "dependency-injection",
    "resolver",
    "inversion-of-control"
  ],
  "type": "library",
  "homepage": "https://github.com/acelot/resolver",
  "license": "MIT",
  "authors": [
    {
      "name": "Valeriy Protopopov",
      "email": "provaleriy@gmail.com"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0",
    "psr/container": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "vimeo/psalm": "^4.8"
  },
  "autoload": {
    "psr-4": {
      "Acelot\\Resolver\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Acelot\\Resolver\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit -c phpunit.xml",
    "psalm": "psalm"
  }
}
